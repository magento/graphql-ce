type Query {
    newsletter(
        subscriber_email: String! @doc(description: "Subscriber e-mail adres")
    ): Newsletter @resolver(class: "Magento\\NewsletterGraphQl\\Model\\Resolver\\Newsletter") @doc(description: "The newsletter query manages newsletter subscriptions")
}

type Mutation {
    toggleSubscription(
        subscriber_email: String! @doc(description: "Subscriber e-mail adres")
    ): Newsletter @resolver(class: "Magento\\NewsletterGraphQl\\Model\\Resolver\\ToggleSubscription") @doc(description: "Test Mutation Resolver")
}

type Newsletter @doc(description: "Customer defines the customer name and address and other details") {
    subscriber_id: Int @doc(description: "The ID assigned to the subscriber")
    store_id: Int @doc(description: "The ID assigned to the subscriber")
    change_status_at: String @doc(description: "Timestamp indicating when the subscription was created")
    customer_id: Int @doc(description: "The id of the user.")
    subscriber_email: String @doc(description: "The subscriber's email address. Required")
    subscriber_status: Boolean @doc(description: "Indicates what the status of the subscription is")
    subscriber_status: Boolean @doc(description: "Indicates what the status of the subscription is")
    subscriber_confirm_code: String @doc(description: "The confirmation code of the subscriber if applicable")
}


